{
  "name": "Peter Stoyanov Coaching Site",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },

  "forwardPorts": [8000, 3000],
  "portsAttributes": {
    "8000": {
      "label": "Backend API",
      "protocol": "http"
    },
    "3000": {
      "label": "Frontend",
      "protocol": "http"
    }
  },

  "postCreateCommand": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
  
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/peter-stoyanov-coaching,type=bind",
  "workspaceFolder": "/workspaces/peter-stoyanov-coaching"
}